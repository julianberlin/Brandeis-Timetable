<div class = "container">
    <h1>Your Profile</h1>
    <br>

    <div class = "row">
        <div class = "col-sm-4">
            <table class = table table-bordered>
                <tbody>
                <tr>
                    <td>
                        Your name
                    </td>
                    <td>
                        <%= user.googlename%>
                    </td>
                </tr>
                <tr>
                    <td>
                        Your email
                    </td>
                    <td>
                        <%= user.googleemail%>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div style="text-align: center;">Your Schedule</div>
    <div class="row">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Class</th>
                <th>Date</th>
                <th>Time</th>
            </tr>
            </thead>

            <tbody>
            <%for (let i = 0; i < user.courseScheduled.length; i++) {%>
                <tr>
                    <td><%= user.courseScheduled[i] %></td>
                    <td><%= user.dateScheduled[i] %></td>
                    <td><%= user.timeScheduled[i] %></td>
                </tr>
            <%}%>
            </tbody>

        </table>
    </div>
</div>